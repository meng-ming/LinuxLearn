{
    "version": "0.2.0",
    "configurations": [
        {
            // 调试名称，例如 "GDB 调试 (CMake)"
            "name": "GDB 调试 (CMake)",

            // 需要安装 C/C++ 扩展
            "type": "cppdbg",

            // "request": "launch"
            // 意思是“启动一个新程序”，而不是“附加到已有的程序”
            "request": "launch",

            // 调试CMake Tools 插件 (command:cmake.launch...)选中的目标
            "program": "${command:cmake.launchTargetPath}",

            "args": [],
            "stopAtEntry": false,

            // "cwd": "${workspaceFolder}"
            // 告诉 GDB 在哪个目录下启动程序（当前为项目的根目录）
            "cwd": "${workspaceFolder}",

            "environment": [],
            "externalConsole": false,

            // "MIMode": "gdb"
            // 告诉 C/C++ 插件，使用的是 gdb，不是 lldb 或 msvc
            "MIMode": "gdb",

            // "setupCommands"
            // GDB 启动时自动执行的命令，让输出更漂亮
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}